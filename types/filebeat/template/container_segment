
- type: container
  paths:
    - /var/log/containers/nginx-log-demo-${NUMBER}*.log
  processors:
    - add_kubernetes_metadata:
        host: ${NODE_NAME}
        matchers:
        - logs_path:
            logs_path: "/var/log/containers/"
    - drop_event:
        when:
          equals:
            beat: filebeat
